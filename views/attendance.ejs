        <ul class="navbar-nav  justify-content-end">
          <li class="nav-item">
            <a class="nav-link" href="#">
              <img
                src="https://img.icons8.com/officel/30/000000/add-user-male.png"
                style="margin-left: 10px"
              />
              Login or Sign Up</a
            >
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">

      <h2 style="text-decoration:underline;margin-top:40px"><img src="https://img.icons8.com/color/48/000000/check-all.png" style="margin-right:20px">Attendence</h2>
      <div class="row">
        <div class="table-responsive"style="margin-top:40px">
          <form action="/teacher/attendance" method="post">
            <table class="table">
              <thead>
                <tr class="bg-primary" style="color:white">
                  <th>Roll No</th>
                  <th>Name</th>
                  <th>Attendence</th>
                </tr>
                <tbody>
                  <% for(let i=0; i<Students.length; i++) { %>
                    <tr>
                        <td><%= Students[i].studentRollNo %></td>
                        <td><%= Students[i].studentName %></td>
                        <td><input type="checkbox" name="<%= Students[i].studentRollNo %>"></td>
                    </tr>
                  <% } %>
                </tbody>
              </thead>
            </table>
            <button type="submit" class="btn btn-success btn-lg btn-block" style="margin:30px 0">Submit</button>
          </form>
          <div style="border-bottom:2px solid black;margin-bottom: 20px"></div>
          <h4>Total Students Present : </h4>
        </div>
      </div>
    </div>
  </body>
